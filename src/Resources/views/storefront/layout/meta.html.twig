{% sw_extends '@Storefront/storefront/layout/meta.html.twig' %}

{% block layout_head_meta_tags_viewport %}

    {% if page.header.extensions.sg_connect_data %}
        <meta name="viewport" content="user-scalable=no, width=device-width">
    {% else %}
        {{ parent() }}
    {% endif %}

{% endblock %}

{% block layout_head_meta_tags_general %}

    {{ parent() }}

    {% if page.header.extensions.sg_connect_data %}
        <!--suppress HtmlUnknownAttribute -->
        <meta id="libshopgate" src="libshopgate"/>
    {% endif %}

{% endblock %}

{% block layout_head_javascript_token %}

    {{ parent() }}

    {% if page.header.extensions.sg_connect_data %}
        <template data-sg-connect-app-plugin></template>
    {% endif %}

{% endblock %}
