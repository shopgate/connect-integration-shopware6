<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="sg_connect_config_css" type="constant">Shopgate\ConnectSW6\Config::KEY_CSS</parameter>
    </parameters>
    <services>
        <defaults autowire="true" autoconfigure="true"/>
        <service id="Shopgate\ConnectSW6\Subscribers\SystemConfigSubscriber">
            <argument key="$cssConfigKey" type="string">%sg_connect_config_css%</argument>
            <tag name="kernel.event_subscriber"/>
        </service>
        <service id="Shopgate\ConnectSW6\Subscribers\IsShopgateSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>
        <service id="Shopgate\ConnectSW6\Storefront\Controller\SGConnectController" public="true">
            <argument key="$logoutRoute" type="service" id="Shopware\Core\Checkout\Customer\SalesChannel\LogoutRoute"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        <service id="Shopgate\ConnectSW6\Services\TokenManager">
            <argument key="$tokens" type="service" id="sgconnect.simple.jwt.tokens"/>
            <argument key="$secret" type="string">%kernel.secret%</argument>
        </service>
        <service id="Shopgate\ConnectSW6\Storefront\Page\GenericPageLoader" public="true">
            <argument type="service" id="Shopware\Storefront\Page\GenericPageLoader"/>
            <argument type="service" id="event_dispatcher"/>
        </service>
        <service id="Shopgate\ConnectSW6\Services\CustomerManager"/>
        <service id="sgconnect.simple.jwt.tokens" class="ReallySimpleJWT\Tokens"/>
    </services>
</container>
